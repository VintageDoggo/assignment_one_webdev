<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<main class="container">
    <!-- Message Area for authentications-->
    <% if(messages.length > 0) {%>
        <div class="alert alert-danger">
            <%= messages %>
        </div>
    <% } %>

    <div class="row">
        <div class="offset-md-4 col-md-4">
            <h1>Please Login</h1>
            <form class="form" method= "POST" autocomplete = off>
                <fieldset class="form-group">
                    <label for="username">Username</label>
                    <input type="text" name = "username" placeholder = "Enter username" id = "username" class="form-control" required autofocus>
                </fieldset>

                <fieldset class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name = "password" placeholder = "Enter password" id = "password" class="form-control" required>
                </fieldset>
                
                <fieldset>
                <button type= "submit" class="btn btn-success">
                    Login
                </button>
                <a href="/">
                    <input type="button" class = "btn btn-warning" value = "Cancel"/>
                </a>
                </fieldset>
            </form>
        </div>
    </div>
</main>



<%- include ../partials/footer.ejs %>